# ==================================
# BLUE LAGOON RESTAURANT - PRODUCTION ENVIRONMENT
# ==================================

# Application Settings
APP_NAME="Blue Lagoon Restaurant"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://your-domain.com

# Localization
APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES
APP_TIMEZONE=America/Bogota

# Maintenance
APP_MAINTENANCE_DRIVER=file

# Performance
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=bluelagoon_production
DB_USERNAME=your_database_user
DB_PASSWORD=your_secure_password

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=your-domain.com
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# Broadcasting (Configure for Pusher or other)
BROADCAST_CONNECTION=pusher
PUSHER_APP_ID=your_pusher_app_id
PUSHER_APP_KEY=your_pusher_key
PUSHER_APP_SECRET=your_pusher_secret
PUSHER_APP_CLUSTER=us2

# Filesystem
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your_s3_bucket_name
AWS_USE_PATH_STYLE_ENDPOINT=false

# Queue Configuration
QUEUE_CONNECTION=redis

# Cache Configuration (Use Redis for production)
CACHE_STORE=redis
CACHE_PREFIX=bluelagoon_

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Security & CORS
SANCTUM_STATEFUL_DOMAINS=your-domain.com,api.your-domain.com
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://api.your-domain.com

# API Rate Limiting
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=1

# Swagger/API Documentation
L5_SWAGGER_GENERATE_ALWAYS=false
L5_SWAGGER_CONST_HOST=https://api.your-domain.com

# Third-party Services
VITE_APP_NAME="${APP_NAME}"

# ==================================
# PRODUCTION SECURITY CHECKLIST
# ==================================
# [ ] Generate new APP_KEY
# [ ] Set APP_DEBUG=false
# [ ] Configure secure database credentials
# [ ] Set up Redis for cache and queues
# [ ] Configure email service (SMTP/SES)
# [ ] Set up S3 or CDN for file storage
# [ ] Enable HTTPS (SESSION_SECURE_COOKIE=true)
# [ ] Configure CORS properly
# [ ] Set up broadcasting (Pusher/WebSockets)
# [ ] Configure backup strategy
# [ ] Set up monitoring (Sentry, New Relic, etc.)
# [ ] Enable rate limiting on API routes
# ==================================
